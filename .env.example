# Configuración de la Base de Datos CouchDB
COUCHDB_PASSWORD=votaciones2024
COUCHDB_SECRET=mysecretkey_change_in_production
COUCHDB_USER=admin

# Configuración de la Aplicación React
REACT_APP_COUCHDB_URL=http://admin:votaciones2024@localhost:5984
REACT_APP_COUCHDB_NAME=votaciones_estudiantiles
REACT_APP_VERSION=1.0.0
REACT_APP_ELECTION_YEAR=2024

# Configuración de la Institución
REACT_APP_INSTITUTION_NAME="Institución Educativa"
REACT_APP_INSTITUTION_LOGO=""
REACT_APP_ELECTION_TITLE="Elecciones Estudiantiles 2024"

# Configuración de Seguridad
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_ENCRYPTION_KEY=your_encryption_key_here

# Configuración de Desarrollo
NODE_ENV=development
GENERATE_SOURCEMAP=true
FAST_REFRESH=true

# Configuración de Producción
# NODE_ENV=production
# GENERATE_SOURCEMAP=false

# Configuración de Red
PORT=3000
HOST=0.0.0.0

# Configuración de Backup
BACKUP_INTERVAL_MINUTES=5
MAX_BACKUP_FILES=50
BACKUP_PATH=./backups

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Configuración de Códigos de Activación
ACTIVATION_CODE_PREFIX=ELEC2024
ACTIVATION_CODE_EXPIRY_HOURS=12

# Configuración de Límites
MAX_STUDENTS_PER_COURSE=50
MAX_CANDIDATES_PER_POSITION=10
MAX_PHOTO_SIZE_MB=2

# URLs de Desarrollo
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_COUCHDB_LOCAL_URL=http://localhost:5984